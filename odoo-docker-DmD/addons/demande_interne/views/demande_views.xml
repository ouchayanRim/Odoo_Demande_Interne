<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_demande_interne_tree" model="ir.ui.view">
        <field name="name">demande.interne.tree</field>
        <field name="model">demande.interne</field>
        <field name="arch" type="xml">
            <tree string="Demandes">
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="priorite" widget="priority"/>
                <field name="date_creation" optional="show"/>
                <field name="date_deadline" optional="hide"/>
                <field name="etat" widget="badge" decoration-info="etat == 'brouillon'" decoration-warning="etat == 'envoye'" decoration-success="etat == 'termine'"/>
            </tree>
        </field>
    </record>

    <record id="view_demande_interne_form" model="ir.ui.view">
        <field name="name">demande.interne.form</field>
        <field name="model">demande.interne</field>
        <field name="arch" type="xml">
            <form string="Demande Interne" class="o_demande_interne_form">
                <header>
                    <button name="action_envoyer" string="Envoyer" type="object" class="oe_highlight" invisible="etat != 'brouillon'"/>
                    <button name="action_terminer" string="Terminer" type="object" class="oe_highlight" invisible="etat != 'envoye'"/>
                    <button name="action_brouillon" string="Remettre en brouillon" type="object" invisible="etat == 'brouillon'"/>
                    <field name="etat" widget="statusbar" statusbar_visible="brouillon,envoye,termine"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ex: Panne de climatisation"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="priorite" widget="priority"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Étiquettes..."/>
                        </group>
                        <group>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="date_creation" invisible="1"/>
                            <field name="date_deadline"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Décrivez votre problème ici..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_demande_interne_kanban" model="ir.ui.view">
        <field name="name">demande.interne.kanban</field>
        <field name="model">demande.interne</field>
        <field name="arch" type="xml">
            <kanban default_group_by="etat" class="o_kanban_small_column" quick_create_view="demande_interne.view_demande_interne_form" records_draggable="1">
                <field name="etat" invisible="1"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <div t-if="record.date_deadline.raw_value" class="text-muted">
                                    <i class="fa fa-clock-o"/> <field name="date_deadline"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priorite" widget="priority"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_demande_interne_search" model="ir.ui.view">
         <field name="name">demande.interne.search</field>
         <field name="model">demande.interne</field>
         <field name="arch" type="xml">
             <search>
                 <field name="name"/>
                 <field name="user_id"/>
                 <field name="tag_ids"/>
                 <filter string="Mes Demandes" name="my_requests" domain="[('create_uid', '=', uid)]"/>
                 <filter string="A faire" name="to_do" domain="[('user_id', '=', uid)]"/>
                 <group expand="0" string="Group By">
                     <filter string="Responsable" name="group_user" context="{'group_by': 'user_id'}"/>
                     <filter string="Statut" name="group_state" context="{'group_by': 'etat'}"/>
                 </group>
             </search>
         </field>
    </record>

    <record id="action_demande_interne" model="ir.actions.act_window">
        <field name="name">Mes Demandes</field>
        <field name="res_model">demande.interne</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_demande_root" name="Demandes DmD" sequence="10"/>
    <menuitem id="menu_demande_interne" name="Gestion des Demandes" parent="menu_demande_root" action="action_demande_interne" sequence="10"/>
</odoo>